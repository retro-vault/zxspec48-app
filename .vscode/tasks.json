{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (Docker)",
      "type": "shell",
      "command": "make",
      "args": ["TARGET=zxspec48-app"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "make",
      "args": ["clean"],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    }
  ]
}
